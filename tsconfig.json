{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/database/database.ts",
    "src/configs/config.ts",
    "src/configs/config.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
